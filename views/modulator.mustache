<div id="col1">

    <div id="menu">
        <h2><span>Modulator</span></h2>
        <div class="box-content">
            <fieldset>
                <legend class="first">
                    <div class="clearfix">
                        <label>Font</label>
                        <select id="param-fontface">
                            {{#fontfaces}}
