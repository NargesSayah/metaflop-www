<div id="col1">
    <div id="menu">
        <h2><span>{{page_title}}</span></h2>
        <div class="box-content">
            {{#all}}
            <div class="clearfix inputblock">
                <label><a href="/{{page_name}}/{{title}}.json" class="dynamic-menu action exclusive{{#active}} active{{/active}}">{{title}}</a></label>
            </div>
            {{/all}}
        </div>
    </div>
    <div id="parameter-panel">
        <h2><span>Info</span></h2>
        <div class="box-content">
            {{first.description}}
        </div>
    </div>
</div>

<div id="col2">
    <div class="preview-box preview-box-fullwidth active">
        <h2><span>{{first.title}}</span></h2>
        <div class="preview-box-content showoff">
            <div id="slideshow">
                <ul class="bjqs">
                    {{#first.images}}
                    <li><img src="{{.}}" /></li>
                    {{/first.images}}
                </ul>
            </div>
        </div>
    </div>
</div>
