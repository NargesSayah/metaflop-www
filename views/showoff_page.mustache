<div id="col1">
    <div id="menu">
        <h2><span>{{page_title}}</span></h2>
        <div class="box-content">
            {{#all}}
            <div class="clearfix inputblock">
                <label><a href="/{{page_name}}/{{title}}.json" class="dynamic-menu action exclusive{{#active}} active{{/active}}">{{title}}</a></label>
            </div>
            {{/all}}
        </div>
    </div>
    <div id="parameter-panel">
        <h2><span>Info</span></h2>
        <div class="box-content text">
            {{{current.description}}}
        </div>
    </div>
</div>

<div id="col2">
    <div class="preview-box preview-box-fullwidth">
        <h2><span></span></h2>
        <div class="preview-box-content showoff">
            <div id="slideshow">
                <ul class="bjqs">
                    {{#current.images}}
                    <li><img src="{{.}}" /></li>
                    {{/current.images}}
                </ul>
            </div>
        </div>
    </div>

    {{#current.subimages}}
    <div class="preview-box preview-box-fullwidth">
        {{#first}}
        <h2><span>derivations</span></h2>
        {{/first}}
        <div class="preview-box-content showoff-derivations">
            <a href="/modulator/font/{{short}}"><img src="{{url}}" /></a>
        </div>
    </div>
    {{/current.subimages}}
</div>
