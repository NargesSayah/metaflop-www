{
    "extends": "airbnb-base/legacy",
    "rules": {
      "vars-on-top": "off",
      "func-names": "off",
      "space-before-function-paren": "off",
      "function-paren-newline": ["error", "consistent"],
      "no-use-before-define": "off",
      "brace-style": ["error", "stroustrup", { "allowSingleLine": true }]
    }
}
